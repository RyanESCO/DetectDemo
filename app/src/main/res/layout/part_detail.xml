<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    android:orientation="vertical">

        <ImageView
            android:id="@+id/imageViewPartImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/adapter" />

        <TextView
            android:id="@+id/textViewDeviceName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ESCO#00123"
            android:layout_marginBottom="20dp"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/textViewProductType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="N3R Point"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/textViewPosition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Position 3"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/textViewInstallationDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Installed July 16, 2016"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/textViewUsage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="133 Hours"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:visibility="visible" />

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chart1"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>

    </LinearLayout>
