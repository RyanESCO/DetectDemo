<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:grid="http://schemas.android.com/tools"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageViewPartImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/u45s_150" />

        <TextView
            android:id="@+id/textViewDeviceName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center_horizontal"
            android:text="ESCO#00123"
            android:textSize="12sp"/>

    </LinearLayout>


    <GridLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="5dp"
        android:columnCount="2"
        android:rowCount="2">

        <TextView
            android:id="@+id/textViewProductType"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center_horizontal"
            grid:layout_gravity="fill_horizontal"
            android:text="N3R Point"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/textViewPosition"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center_horizontal"
            grid:layout_gravity="fill_horizontal"
            android:text="3"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_marginBottom="15dp"
            android:gravity="center_horizontal"
            grid:layout_gravity="fill_horizontal"
            android:text="DESCRIPTION"

            android:textSize="@dimen/grid_label_size" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center_horizontal"
            grid:layout_gravity="fill_horizontal"
            android:text="POSITION"
            android:textSize="@dimen/grid_label_size" />

        <TextView
            android:id="@+id/textViewInstallationDate"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center_horizontal"
            grid:layout_gravity="fill_horizontal"
            android:text="7/16/2016"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/textViewUsage"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center_horizontal"
            grid:layout_gravity="fill_horizontal"
            android:text="133 Hours"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:visibility="visible" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center_horizontal"
            grid:layout_gravity="fill_horizontal"
            android:text="INSTALLED"
            android:textSize="@dimen/grid_label_size" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center_horizontal"
            grid:layout_gravity="fill_horizontal"
            android:text="USAGE (HRS)"
            android:textSize="@dimen/grid_label_size" />
    </GridLayout>

</LinearLayout>

